<div class="payment-page">

	<div class="container">
		<h1 class="payment-title">Here are the ways you can pay</h1>
	</div>

	<div class="flex-container payment-options-container">
		<div class="grid-cell payment-option-container first-option">
			<span class="align-items-center flex-container mb-3 pb-3">
				<svg class="color-red lexicon-icon lexicon-icon-display mr-3">
					<use xlink:href="${themeDisplay.getPathThemeImages()}/cmic/icons.svg#display" />
				</svg>
				<h3 class="m-0">Pay online</h3>
			</span>

			<a
				href="https://ipn.paymentus.com/cp/cmic"
				class="btn-lg-block btn btn-primary cursor-pointer pay-now-btn text-decoration-none"
				rel="noopener noreferrer"
				target="_blank"
				tabIndex="0">Pay Now<svg class="lexicon-icon lexicon-icon-external-link ml-2"><use xlink:href="${themeDisplay.getPathThemeImages()}/cmic/icons.svg#external-link" /></svg>
			</a>
		</div>
		<div class="grid-cell payment-option-container second-option">
			<span class="align-items-center flex-container mb-3 pb-3">
				<svg class="color-red lexicon-icon lexicon-icon-phone mr-3">
					<use xlink:href="${themeDisplay.getPathThemeImages()}/clay/icons.svg#phone" />
				</svg>
				<h3 class="m-0">Pay by Phone</h3>
			</span>

			<h4 class="font-weight-bold">Call <a href="tel:800-554-2642">(800) 554-2642</a></h4>

			<small>Select option 3, then option 1</small>
		</div>
		<div class="grid-cell payment-option-container third-option">
			<div>
				<span class="align-items-center flex-container mb-3 pb-3">
					<svg class="color-red lexicon-icon lexicon-icon-envelope-closed mr-3">
						<use xlink:href="${themeDisplay.getPathThemeImages()}/clay/icons.svg#envelope-closed" />
					</svg>
					<h3 class="m-0">Pay by Mail</h3>
				</span>

				<h4 class="font-weight-bold">Mail a check to:</h4>

				<small>
					<div>Church Mutual</div>
					<div>P.O. Box 2912</div>
					<div>Milwaukee, WI 53201-2912</div>
				</small>
			</div>
		</div>
		<div class="flex-container grid-cell justify-content-center payment-contacts">
			<div class="well">
				<span class="align-items-center flex-container mb-4">
					<svg class="color-red lexicon-icon lexicon-icon-question-circle mr-3">
						<use xlink:href="${themeDisplay.getPathThemeImages()}/clay/icons.svg#question-circle" />
					</svg>
					<h4 class="m-0">For Billing Questions</h4>
				</span>
				<table>
					<tbody>
						<tr>
							<td class="align-top font-weight-bold">Call</td>
							<td><span class="d-inline-block"><a href="tel:800-554-2642">(800) 554-2642</a><small class="d-block mt-2">Press 3 when prompted</small></span></td>
						</tr>
						<tr>
							<td class="font-weight-bold">Fax</td>
							<td><a href="tel:715-539-4650">(715) 539-4650</a></td>
						</tr>
						<tr>
							<td class="font-weight-bold">Email</td>
							<td><a href="mailto:billing@churchmutual.com">billing@churchmutual.com</a></td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>